<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="420.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="stp.controller.ConverterController">
    <MenuBar>
        <Menu fx:id="menuExit" mnemonicParsing="false" text="Выход"/>
        <Menu fx:id="menuHistory" mnemonicParsing="false" text="История"/>
        <Menu mnemonicParsing="false" text="Справка"/>
    </MenuBar>
    <VBox prefHeight="200.0" prefWidth="100.0">
        <TextField fx:id="textFieldInputValue" layoutX="10.0" layoutY="10.0">
            <VBox.margin>
                <Insets left="15.0" right="15.0" top="10.0"/>
            </VBox.margin>
        </TextField>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <Region prefHeight="35.0" prefWidth="0.0" visible="false" HBox.hgrow="ALWAYS"/>
            <Label text="Основание с.сч. исходного числа:">
                <HBox.margin>
                    <Insets right="5.0" top="10.0"/>
                </HBox.margin>
            </Label>
            <Spinner fx:id="spinnerInputBase" prefHeight="25.0" prefWidth="55.0">
                <valueFactory>
                    <SpinnerValueFactory.IntegerSpinnerValueFactory amountToStepBy="1" initialValue="10" max="16"
                                                                    min="2"/>
                </valueFactory>
                <HBox.margin>
                    <Insets right="15.0" top="10.0"/>
                </HBox.margin>
            </Spinner>
        </HBox>
        <Slider fx:id="sliderInputBase" blockIncrement="1.0" majorTickUnit="1.0" max="16.0" min="2.0" minorTickCount="1"
                showTickLabels="true" showTickMarks="true" snapToTicks="true" value="10.0">
            <VBox.margin>
                <Insets left="15.0" right="15.0" top="10.0"/>
            </VBox.margin>
        </Slider>
        <HBox alignment="CENTER">
            <Region prefHeight="35.0" prefWidth="0.0" visible="false"/>
            <TextField fx:id="textFieldIOutputValue" HBox.hgrow="ALWAYS">
                <opaqueInsets>
                    <Insets/>
                </opaqueInsets>
                <HBox.margin>
                    <Insets left="15.0" right="15.0" top="20.0"/>
                </HBox.margin>
            </TextField>
            <Label text="Точность:">
                <HBox.margin>
                    <Insets right="5.0" top="20.0"/>
                </HBox.margin>
            </Label>
            <TextField fx:id="textFieldPrecision" prefWidth="30.0">
                <HBox.margin>
                    <Insets right="15.0" top="20.0"/>
                </HBox.margin>
            </TextField>
        </HBox>
        <HBox alignment="CENTER" layoutX="10.0" layoutY="45.0" prefHeight="100.0" prefWidth="200.0">
            <Region prefHeight="35.0" prefWidth="0.0" visible="false" HBox.hgrow="ALWAYS"/>
            <Label text="Основание с.сч. результата:">
                <HBox.margin>
                    <Insets right="5.0" top="10.0"/>
                </HBox.margin>
            </Label>
            <Spinner fx:id="spinnerOutputBase" prefHeight="25.0" prefWidth="55.0">
                <valueFactory>
                    <SpinnerValueFactory.IntegerSpinnerValueFactory amountToStepBy="1" initialValue="2" max="16"
                                                                    min="2"/>
                </valueFactory>
                <HBox.margin>
                    <Insets right="15.0" top="10.0"/>
                </HBox.margin>
            </Spinner>
        </HBox>
        <Slider fx:id="sliderOutputBase" blockIncrement="1.0" layoutX="10.0" layoutY="135.0" majorTickUnit="1.0"
                max="16.0" min="2.0" minorTickCount="1" showTickLabels="true" showTickMarks="true" snapToTicks="true"
                value="2.0">
            <VBox.margin>
                <Insets left="15.0" right="15.0" top="10.0"/>
            </VBox.margin>
        </Slider>
        <GridPane alignment="CENTER" minHeight="-Infinity" VBox.vgrow="SOMETIMES">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints/>
            </rowConstraints>
            <VBox.margin>
                <Insets left="15.0" right="15.0" top="20.0"/>
            </VBox.margin>
            <Button fx:id="button0" mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" text="0"/>
            <Button fx:id="button4" mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" text="4"
                    GridPane.rowIndex="1"/>
            <Button fx:id="button8" mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" text="8"
                    GridPane.rowIndex="2"/>
            <Button fx:id="buttonC" mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" text="C"
                    GridPane.rowIndex="3"/>
            <Button fx:id="buttonDot" mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" text="."
                    GridPane.rowIndex="4"/>
            <Button fx:id="button1" mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" text="1"
                    GridPane.columnIndex="1"/>
            <Button fx:id="button5" mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" text="5"
                    GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Button fx:id="button9" mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" text="9"
                    GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <Button fx:id="buttonD" mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" text="D"
                    GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            <Button fx:id="buttonBS" mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" text="BS"
                    GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            <Button fx:id="button2" mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" text="2"
                    GridPane.columnIndex="2"/>
            <Button fx:id="button6" mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" text="6"
                    GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <Button fx:id="buttonA" mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" text="A"
                    GridPane.columnIndex="2" GridPane.rowIndex="2"/>
            <Button fx:id="buttonE" mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" text="E"
                    GridPane.columnIndex="2" GridPane.rowIndex="3"/>
            <Button fx:id="buttonClear" mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" text="CE"
                    GridPane.columnIndex="2" GridPane.rowIndex="4"/>
            <Button fx:id="button3" mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" text="3"
                    GridPane.columnIndex="3"/>
            <Button fx:id="button7" mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" text="7"
                    GridPane.columnIndex="3" GridPane.rowIndex="1"/>
            <Button fx:id="buttonB" mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" text="B"
                    GridPane.columnIndex="3" GridPane.rowIndex="2"/>
            <Button fx:id="buttonF" mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" text="F"
                    GridPane.columnIndex="3" GridPane.rowIndex="3"/>
            <Button fx:id="buttonExecute" mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" text="Execute"
                    GridPane.columnIndex="3" GridPane.rowIndex="4"/>
        </GridPane>
    </VBox>
</VBox>
